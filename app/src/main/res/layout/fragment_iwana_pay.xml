<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingRight="@dimen/dimen_x1x"
        android:paddingLeft="@dimen/dimen_x1x">

        <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
            android:id="@+id/btn_buy_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3x"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:layout_marginRight="@dimen/dimen_3x"
            android:background="@drawable/bg_pressed_radius_primary"
            android:gravity="center"
            android:padding="@dimen/dimen_2x"
            android:text="@string/iwana_pay_buy_credit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />

        <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
            android:id="@+id/btn_functions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3x"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:layout_marginRight="@dimen/dimen_3x"
            android:background="@drawable/bg_pressed_radius_primary"
            android:gravity="center"
            android:padding="@dimen/dimen_2x"
            android:textAllCaps="true"
            android:text="@string/iwana_pay_redeem"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />

        <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
            android:id="@+id/btn_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3x"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:layout_marginRight="@dimen/dimen_3x"
            android:background="@drawable/bg_pressed_radius_primary"
            android:gravity="center"
            android:padding="@dimen/dimen_2x"
            android:textAllCaps="true"
            android:text="@string/iwana_pay_tranfers"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />

        <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
            android:id="@+id/btn_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_3x"
            android:layout_marginLeft="@dimen/dimen_3x"
            android:layout_marginRight="@dimen/dimen_3x"
            android:background="@drawable/bg_pressed_radius_primary"
            android:gravity="center"
            android:padding="@dimen/dimen_2x"
            android:textAllCaps="true"
            android:text="@string/iwana_pay_histories"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xlarge" />
    </LinearLayout>


</RelativeLayout>