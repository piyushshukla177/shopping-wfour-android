<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wfour.onlinestoreapp.widgets.textview.TextViewRegular
            android:id="@+id/lbl_month"
            android:layout_width="@dimen/dimen_xbutton"
            android:layout_height="@dimen/dimen_xbutton"
            android:layout_margin="@dimen/dimen_1x"
            android:background="@color/white"
            android:gravity="center"
            android:text="DEC"
            android:textAllCaps="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_large" />

        <View
            android:id="@+id/vertical_divider"
            android:layout_width="@dimen/dimen_divider"
            android:layout_height="match_parent"
            android:background="@color/dividerColor" />
    </LinearLayout>

    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_divider"
        android:background="@color/dividerColor" />
</LinearLayout>