<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_no_connection"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_not_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="@dimen/dimen_3x"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_xxxlarge"
                android:textColor="@color/textColorSecondary"
                android:text="@string/no_connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/btn_refresh"
                android:text="@string/refresh"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_3x"
                android:paddingTop="@dimen/dimen_x1x"
                android:paddingBottom="@dimen/dimen_x1x"
                android:textSize="@dimen/text_size_xxxlarge"
                android:paddingLeft="@dimen/dimen_3x"
                android:paddingRight="@dimen/dimen_3x"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_login_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>